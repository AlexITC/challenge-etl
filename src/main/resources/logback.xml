<configuration>

  <!-- ===================================================== -->
  <!-- Secondary Appenders -->
  <!-- ===================================================== -->

  <!-- Service Log (Rollover daily/50MB) -->
  <appender name="SERVICE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${log.service.output:-service.log}</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${log.service.output:-service.log}-%d{yyyy-MM-dd}.%i</fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy
          class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>50MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
    </rollingPolicy>
    <encoder>
      <pattern>%date %.-3level %-16X{transactionId} %-16X{traceId} %-8X{appId} %-55X{uri} %-25logger{0} %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Access Log (Rollover daily/50MB) -->
  <appender name="ACCESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${log.access.output:-access.log}</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${log.access.output:-access.log}-%d{yyyy-MM-dd}.%i</fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy
          class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>50MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
    </rollingPolicy>
    <encoder>
      <pattern>%msg %X{traceId}%n</pattern>
    </encoder>
  </appender>

  <!-- ===================================================== -->
  <!-- Primary Async Appenders -->
  <!-- ===================================================== -->

  <appender name="ASYNC-SERVICE" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="SERVICE"/>
  </appender>

  <appender name="ASYNC-ACCESS" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="ACCESS"/>
  </appender>

  <!-- ===================================================== -->
  <!-- Package Config -->
  <!-- ===================================================== -->

  <!-- Root Config -->
  <root level="info">
    <appender-ref ref="ASYNC-SERVICE"/>
  </root>

  <!-- Per-Package Config -->
  <logger name="org.apache.spark" level="warn"/>

</configuration>
